<div id="main-container" class="container-fluid">
      <div class="row">
        <div id="main-content" class="col-md-9">
          <%= form_for [@group,@invite] do |f| %>
           <%= f.label :name %>
           <%= f.text_field :name %>
           </br >
           <%= f.label :email %>
           <%= f.text_field :email %>
           </br >
           <%= f.hidden_field :admin, :value => session[:user_id] %>
           <%= f.hidden_field :group_id, :value => params[:group_id] %>
           </br >
           <%= f.submit "INVITE"%>
          <% end %>
          <ul>
            <% @invite.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>

        </div>
        <div id="sidebar" class="col-md-3">
          <div>
            <h4>Your Lists: </h4>
            <ul>
            <% @lists.each do |list| %>
                <li><%= link_to list.name, user_list_path(list.user_id, list.id)%></li>
              <% end %>
            </ul>
          </div>
          <div>
            <h4>Your Groups: </h4>
            <ul>
            <% @groups.each do |group| %>

                <li><%= link_to group.name, group_path(group.id) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
