<div class="bs-example">
    <ul id="navHeader" class="nav nav-pills">
        <li>
          <div id="logo"><a href="http://www.onelist.io">OneList.</a></div>
        </li>
        <li class="pull-right"><%= link_to "SIGN UP", new_user_path %></li>
    </ul>
    <hr id="headerDivider">

  <div id="main-container" class="container-fluid">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <form id="login" action="/session" method="POST">
          <div class="inputs">
            <label for="username">
                Username:
                <input name="username">
            </label>
          </div>
          <div class="inputs">
            <label for = "password">
                Password:
                <input name="password" type="password">
            </label>
          </div>
            <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

            <button>Login</button>
        </form>
        </br>
          <%= link_to "Forgot username or password? Click here!", new_login_path %>
      </div>
    </div>
  </div>
