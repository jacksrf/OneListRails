        </div>
        <div id="sidebar" class="col-md-2">
          <div class="well well-large">
            <h4>Lists: </h4>
            <ul class="nav nav-pills">
            <% @lists.each do |list| %>
                <li><%= link_to list.name, user_list_path(list.user_id, list.id)%></li>
              <% end %>
            </ul>
          </div>
          <div class="well well-large">
            <h4>Groups: </h4>
            <h6>Admin of:</h6>
            <ul class="nav nav-pills">
            <% @groups.each do |group| %>

