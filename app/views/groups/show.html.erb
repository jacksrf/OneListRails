<% if @group.single_list %>
<div id="main-container" class="container-fluid">
      <div class="row">
        <!-- group info-->
        <div id="main-content" class="col-md-10">
          <h2><%= @group.name %>:</h2>
          <h4><%= @group.subtitle %></h4>

          <!-- invite link -->
          <% if @group.creator_id == session[:user_id]%>
            <div><%= link_to "Invite", new_group_invite_path(@group.id) %></div>
          <% end %>
          <!-- GROUP MEMBER LIST-->
          <h4>Group Members: </h4>
          <% @members.each do |member| %>
              <div class="row">
                <div class="col-md-7"><%= member.name %></div>
              </div>
            <% end %>
            <!-- LIST OF INVITES THAT ARE OUT-->
          <% if @group.creator_id == session[:user_id]%>
          <h4>Invites out: </h4>
          <% @invites.each do |invite| %>
              <div class="row">
                <div class="col-md-7"><%= invite.name %> <%= link_to "delete", group_invite_path(@group,invite.id), :method=> "delete" %></div>
              </div>
            <% end %>
          <% end %>
          <!-- THE LIST FOR SINGLE LIST GROUPS-->
          <h4>The List: </h4>
          <% if @group.creator_id == session[:user_id]%>
          <% @items.each do |item| %>
              <div class="row">
                <div class="col-md-7"><a href="<%= item.url %>"><%= item.name %></a></div>
                <div class="col-md-2 col-md-offset-1">Price: <%= item.price %></div>
                <div class="col-md-1"><%= link_to "delete", [item.list, item], :confirm => "Are you sure you want to delete this comment?", :method => :delete %></div>
              </div>
            <% end %>
          <% end %>
          <% if @group.creator_id != session[:user_id]%>
          <% @items.each do |item| %>
              <div class="row">
                <div class="col-md-6"><a href="<%= item.url %>">- <%= item.name %></a></div>
                <div class="col-md-2">Price: <%= item.price %></div>
                <% if item.bought == false %>
                <div class="col-md-2"><%= link_to "buy", list_item_path(@list.id, item.id), :method => :put %></div>
                <% elsif item.bought == true %>
                <% buyer = User.find_by(id: item.bought_id) %>
                <div class="col-md-2" style="display: inline">Bought by: <%= buyer.first_name %> <%= buyer.last_name %>
                  <% if session[:user_id] == item.bought_id %>
                  <%= link_to "cancel", list_item_path(@list.id, item), :method => :put %>
                  <% end %>
                </div>
                <% end %>
              </div>
           <% end %>
          <% end %>
          <!-- LINK TO DELETE GROUP -->
          <% if @group.creator_id == session[:user_id]%>
            <%= link_to "DELETE GROUP", group_path, :method=> "delete" %>
          <% end %>
          <!-- LINK TO LEAVE SINGLE LIST GROUP-->
          <% if @group.creator_id != session[:user_id] && @group.single_list %>
            <% memberId = Member.find_by(name: session[:username], group_id: @group.id) %>
            <%= link_to "LEAVE GROUP", group_member_path(@group, memberId), :method=> "delete" %>
            <% end %>
            <!-- LINK TO LEAVE A MULTI LIST GROUP -->
          <% if @group.creator_id != session[:user_id] && @group.multi_list %>
            <% multiListId = MultiList.find_by(user_id: session[:user_id]) %>
            <%= link_to "LEAVE GROUP", group_member_path(@group, multiListId), :method=> "delete" %>
            <% end %>
          </div>

<!-- SIDE BAR FEATURES -->
        <div id="sidebar" class="col-md-2">
          <div class="well well-large">
            <h4>Lists: </h4>
            <ul class="nav nav-pills">

<!-- USER LISTS -->
            <% @lists.each do |list| %>
                <li><%= link_to list.name, user_list_path(list.user_id, list.id)%></li>
              <% end %>
            </ul>
          </div>
          <div class="well well-large">
<!-- USER GROUPS -->
            <h4>Groups: </h4>
            <h6>Admin of:</h6>
            <ul class="nav nav-pills">
            <% @groups.each do |group| %>

                <li><%= link_to group.name, group_path(group.id) %></li>
              <% end %>
            </ul>
            <h6>Group member of:</h6>
            <ul class="nav nav-pills">
            <% @members.each do |member| %>
              <% group = Group.find_by(id: member.group_id) %>
                <li><%= link_to group.name, group_path(group.id) %></li>

              <% end %>

            </ul>

          </div>
        </div>
        </div>
        </div>
<% elsif @group.multi_list %>
<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="main-content" class="col-md-10">
      <h2><%= @group.name %>:</h2>
      <h4><%= @group.subtitle %></h4>
      <h4>Your List: </h4>

      <% @items.each do |item| %>
          <div class="row">
            <div class="col-md-7"><a href="<%= item.url %>"><%= item.name %></a></div>
            <div class="col-md-2 col-md-offset-1">Price: <%= item.price %></div>
            <div class="col-md-1"><%= link_to "delete", [item.list, item], :confirm => "Are you sure you want to delete this comment?", :method => :delete %></div>
          </div>
        <% end %>

<!-- LINK TO DELETE GROUP -->
      <% if @group.creator_id == session[:user_id]%>
        <%= link_to "DELETE GROUP", group_path, :method=> "delete" %>
      <% end %>

<!-- LINK TO LEAVE A MULTI LIST GROUP -->
      <% if @group.creator_id != session[:user_id] && @group.multi_list %>
        <% multiListId = MultiList.find_by(user_id: session[:user_id]) %>
        <%= link_to "LEAVE GROUP", group_member_path(@group, multiListId), :method=> "delete" %>
      <% end %>

    </div>
    <div id="sidebar" class="col-md-2">
      <div class="well well-large">
        <!-- invite link -->
        <% if @group.creator_id == session[:user_id]%>
          <div><%= link_to "Invite", new_group_invite_path(@group.id) %></div>
        <% end %>
        <div class="row">
          <div class="col-md-offset-1"><%= link_to "Group Home", group_path(@group.id)  %></div>
        </div>
        <h6>Group Members: </h6>
        <% @multiLists.each do |multiList| %>
          <% if multiList.user_id != session[:user_id] %>
            <% user = User.find_by(id: multiList.user_id) %>
            <% group = Group.find_by(id: multiList.group_id) %>
            <div class="row">
              <div class="col-md-offset-1"><%= link_to user.username, group_multi_list_path(group.id,multiList.id) %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
