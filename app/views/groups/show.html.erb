<div id="main-container" class="container-fluid">
      <div class="row">

        <div id="main-content" class="col-md-10">
          <h2><%= @group.name %>:</h2>
          <% if @group.creator_id == session[:user_id]%>
            <div><%= link_to "Invite", new_group_invite_path(@group.id) %></div>
          <% end %>
          <h4>Group Members: </h4>
          <% @members.each do |member| %>
              <div class="row">
                <div class="col-md-7"><%= member.name %></div>
              </div>
            <% end %>

          <% if @group.creator_id == session[:user_id]%>
          <h4>Invites out: </h4>
          <% @invites.each do |invite| %>
              <div class="row">
                <div class="col-md-7"><%= invite.name %> <%= link_to "delete", group_invite_path(@group,invite.id), :method=> "delete" %></div>
              </div>
            <% end %>
          <% end %>

          <h4>The List: </h4>
          <% if @group.creator_id == session[:user_id]%>
          <% @items.each do |item| %>
              <div class="row">
                <div class="col-md-7"><a href="<%= item.url %>">- <%= item.name %></a></div>
                <div class="col-md-2 col-md-offset-1">Price: <%= item.price %></div>
                <div class="col-md-1"><%= link_to "delete", [item.list, item], :confirm => "Are you sure you want to delete this comment?", :method => :delete %></div>
              </div>
            <% end %>
          <% end %>
          <% if @group.creator_id != session[:user_id]%>
          <% @items.each do |item| %>
              <div class="row">
                <div class="col-md-6"><a href="<%= item.url %>">- <%= item.name %></a></div>
                <div class="col-md-2">Price: <%= item.price %></div>
                <% if item.bought == false %>
                <div class="col-md-2"><%= link_to "buy", list_item_path(@list.id, item.id), :method => :put %></div>
                <% elsif item.bought == true %>
                <% buyer = User.find_by(id: item.bought_id) %>
                <div class="col-md-2" style="display: inline">Bought by: <%= buyer.first_name %> <%= buyer.last_name %>
                  <% if session[:user_id] == item.bought_id %>
                  <%= link_to "cancel", list_item_path(@list.id, item), :method => :put %>
                  <% end %>
                </div>
                <% end %>
              </div>
           <% end %>
          <% end %>
          <% if @group.creator_id == session[:user_id]%>
            <%= link_to "DELETE GROUP", group_path, :method=> "delete" %>
          <% end %>
          <% if @group.creator_id != session[:user_id]%>
            <% memberId = Member.find_by(name: session[:username], group_id: @group.id) %>
            <%= link_to "LEAVE GROUP", group_member_path(@group, memberId), :method=> "delete" %>
            <% end %>
          </div>


        <div id="sidebar" class="col-md-2">

          <div>
            <h4>Your Lists: </h4>
            <ul>
            <% @lists.each do |list| %>
                <li><%= link_to list.name, user_list_path(list.user_id, list.id)%></li>
              <% end %>
            </ul>
          </div>

          <div>
            <h4>Your Groups: </h4>
            <h6>Admin of:</h6>
            <ul>
            <% @groups.each do |group| %>

                <li><%= link_to group.name, group_path(group.id) %></li>
              <% end %>
            </ul>
            <h6>Group member of:</h6>
            <ul>
            <% @members.each do |member| %>
              <% group = Group.find_by(id: member.group_id) %>
                <li><%= link_to group.name, group_path(group.id) %></li>

              <% end %>

            </ul>

          </div>
        </div>

